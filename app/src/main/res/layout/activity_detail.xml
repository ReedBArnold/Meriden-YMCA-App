<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.arnold.reed.meridenymcaapp.ActivityDetail">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Activity Name"
        android:id="@+id/activityNameView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/activity_background"
        android:autoText="true"
        android:padding="10dp"
        android:layout_toLeftOf="@+id/activityDateView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Date"
        android:id="@+id/activityDateView"
        android:padding="10dp"
        android:background="@drawable/activity_background"
        android:autoText="false"
        android:layout_above="@+id/activityDescView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Description"
        android:id="@+id/activityDescView"
        android:background="@drawable/activity_background1"
        android:layout_below="@+id/activityNameView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/activityDateView"
        android:paddingBottom="90dp"
        android:paddingLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Counselors"
        android:id="@+id/activityCounselorView"
        android:background="@drawable/activity_background1"
        android:autoText="false"
        android:padding="10dp"
        android:layout_below="@+id/activityDescView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Location"
        android:id="@+id/activityLocationView"
        android:background="@drawable/activity_background1"
        android:autoText="false"
        android:padding="10dp"
        android:layout_alignBottom="@+id/activityCounselorView"
        android:layout_alignRight="@+id/activityDateView"
        android:layout_toRightOf="@+id/activityCounselorView" />
</RelativeLayout>
